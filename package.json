{
  "name": "nodetalks2",
  "version": "1.0.0",
  "description": "An updated version of the COSI NodeTalks app.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon main -- -d",
    "lint": "standard && eslint test/*.js",
    "format": "standard --fix",
    "test": "mocha test/*.js",
    "codecov": "codecov",
    "coverage": "c8 --reporter=text --reporter=lcov npm run test",
    "mkdocs": "jsdoc -c conf.json"
  },
  "lint-staged": {
    "*.js": "standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && eslint test/*.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reecer62/NodeTalks2.git"
  },
  "author": "Reece Emero",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reecer62/NodeTalks2/issues"
  },
  "homepage": "https://github.com/reecer62/NodeTalks2#readme",
  "devDependencies": {
    "c8": "^7.1.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.2.2",
    "husky": "^4.2.1",
    "jsdoc": "^3.6.3",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.3",
    "standard": "^14.3.1"
  }
}
