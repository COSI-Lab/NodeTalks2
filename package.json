  "devDependencies": {
    "c8": "^7.1.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.2.2",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "standard": "^14.3.1"
  }
