{
    "env": {
        "browser": true,
        "es6": true    
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "mocha"
    ],
    "rules": {
        "no-var": "error",
        "mocha/no-exclusive-tests": "error"
    }
}